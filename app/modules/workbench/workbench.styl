h2 , h3
  font-weight 300
  font-size 1.8rem

  small.attribution
    float: right
    line-height 16px
    color #888
    a
      color grey
      &:hover
        text-decoration none

.logoName
  input
    border none
    color primary
    display block
    width 95%
    margin 0 auto
    padding 0 10px
    font-size 2.8rem
    border 1px solid background
    outline none



.select
  list-style none
  margin 0 10px
  padding 0
  li
    padding 5px 3px
    margin 4px 0
    text-align center
    cursor pointer
    &:hover
      background-color lighten(background , 2)
    &.picked
      background-color lighten(background , 2)
      span
        font-weight 400


.color-palette
  max-height 400px
  margin-top: 20px
  padding-top: 10px
  .select
    display flex
    flex-wrap wrap
    .color-element
      width: 70px
      height: 70px
      margin-right: 8px
      background-color red
      border-radius 50%
      transition: 120ms all  ease-in-out
      &:hover
        border-radius 50%
        transform: scale(1.2)
        -webkit-box-shadow: 0 1px 12px grey
        -moz-box-shadow:  0 1px 12px grey
        box-shadow:  0 1px 12px grey
        &>span
          font-weight 300
          transform: scale(1.5)
      &>span
        line-height 60px
        font-size 3rem
        font-weight 100
        transition: 120ms all  ease-in-out
    &.selected
      border: 2px solid red



.shape-selector
  &.icon-selector
    ul
      justify-content flex-start
      &>li
        margin: 5px 5px
  ul
    display flex
    flex-wrap wrap
    flex-direction row
    justify-content space-between
    .shape-item
      width 75px
      &>span
        margin auto
        display block
        width 60px
        height 60px
        background-color black
        color transparent
        &.none
          background-color transparent
          color black
          text-transform capitalize
          line-height 67px
        &.circle
          border-radius 50%
        &.diamond
          width 50px
          height 50px
          transform-origin center center
          transform rotate(45deg)
      &>img
        width 60px;
        height 60px;


.color-picker
  display flex

  .color
    margin: 5px 10px
    width 30px;
    height 30px;
    -webkit-box-shadow: 1px 1px 12px rgba(100, 100, 100, 0.2)
    -moz-box-shadow: 1px 1px 12px rgba(100, 100, 100, 0.2)
    box-shadow: 1px 1px 12px rgba(100, 100, 100, 0.2)
    cursor pointer
    &.black
      background-color black

.createdLogo
  // basic configuration
  .icon

    justify-content center
    align-items center
    transition 120ms all ease-in-out
    position relative

    .shape
      //position absolute
      //top 0
      //bottom 0
      //left 0
      //right 0
      width: 60px
      height 60px

    .figure
      width 60px
      height 60px
      position absolute
      text-align center
      overflow hidden

      top 0
      bottom 0
      left 0
      right 0

      &> span
        font-size 40px
        font-family 'Roboto'
        font-weight 500

      &> img
        margin-top 3px
        width 50px
        overflow hidden

  .text
    text-align: center
    font-size 30px
    margin-left: 5px

  // Logo Layouts
  &.iconic
    .text
      display none

  &.textual
    .icon
      display none !important

  &.icon-right
    flex-direction row-reverse
    .text
      margin-right 5px

  &.icon-top
    flex-direction column
    .text
      margin-left 5px

  // Icon: Shape
  &.none
    .shape
      background-color transparent !important
  &.circle
    .icon .shape
      border-radius 30px

  &.diamond
    padding: 15px 0 !important
    .icon .shape
      transform-origin center center
      transform rotate(45deg)
    &.icon-left
      .text
        padding-left 10px

    &.icon-right
      .text
        padding-right 13px
    &.icon-top
      .text
        padding-top 5px

// Text: Letter Case
  &.uppercase .text
    text-transform uppercase
  &.lowercase .text
    text-transform lowercase
  &.capitalize .text
    text-transform capitalize
  &.smallcaps .text
    font-variant small-caps
  // Text: Weight
  &.light .text
    font-weight 300
  &.regular .text
    font-weight 400
  &.bold .text
    font-weight 500

.uploader
  padding 6px 0
  label
    text-align center
    line-height 40px
    padding: 0 6px
    margin 0 auto
    display block
    background-color primary
    color background
    width: 60%
    &>i
      padding: 0 5px 6px 0
  input[type="file"]
    position absolute
    opacity 0.01
