::-webkit-input-placeholder
  color: red

.control-group
  margin: 9px 0
  position: relative

  &.iconic-label
    &:before
      position: absolute
      top: 0;
      content: '';
      width: 40px;
      height: 50px;
      color: #2eccfc;
      margin: 2px 5px 2px 1px;
      text-align: center;
      font-size: 23px;
      padding-top: 8px;
      font-family: 'intouch'
    &.username:before
      content: 'b'
    &.mail:before
      content: 'a'

  .fieldValue,
  input.form-control
    height:50px
    padding-left: 50px
    background-color white
    border 1px solid lightgrey
    border-radius: 0
    font-size: 18px
    box-shadow: none !important
    color: #464646
  input.form-control
    &[type='text']
    &[type='email']
    &[type='password']
      &:focus
        border-color: grey
        box-shadow: none !important
        &:before
          color: black
    &[type='password']
      font-size: 2rem

.action-group
  button
    font-size: 16px !important
    border: none
    background-color: blue
    color: white
    padding: 11px 0
    &> span
      font-size: 18px
      font-weight: 400
    &:disabled
      background-color: lightgrey
      color: grey
